generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id       String @id @default(uuid()) // UUID as Primary Key
  name     String
  email    String @unique
  password String
  role     Role
}

model Question {
  id         String   @id @default(uuid()) // UUID as Primary Key
  value      String
  options    String[]
  amount     String
  CorrectIdx Int

}

model Answer{
 user 
}
