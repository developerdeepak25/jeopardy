generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id       String   @id @default(uuid()) // UUID as Primary Key
  name     String
  email    String   @unique
  password String?
  role     Role
  Answer   Answer[]
  image    String?
  
}

model Question {
  id         String   @id @default(uuid()) // UUID as Primary Key
  value      String
  options    String[]
  amount     Int
  CorrectIdx Int
  Answer     Answer[]
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
}

model Answer {
  id          String   @id @default(uuid()) // UUID as Primary Key
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  questionId  String
  question    Question @relation(fields: [questionId], references: [id])
  selectedIdx String //selected option index of a question
  correct     Boolean
}

model Category {
  id        String     @id @default(uuid()) // UUID as Primary Key
  name      String
  questions Question[]
}
